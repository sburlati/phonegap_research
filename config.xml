<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sburlati.phonegap_research" version="1.0.10" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BT_Res_App_1.0.10</name>
    <description>
        BT research App: A basic Framework7 template for PhoneGap.
    </description>
    <author email="marco@sburlati.com" href="http://win.sburlati.com">
        BT Research App - from an example of Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	<icon src="res/logo.png" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
		<icon src="res/logo.png" />
		<!--
		<icon density="ldpi"    src="www/res/icon/android/drawable-ldpi-icon.png" />
        <icon density="mdpi"    src="www/res/icon/android/drawable-mdpi-icon.png" />
        <icon density="hdpi"    src="www/res/icon/android/drawable-hdpi-icon.png" />
        <icon density="xhdpi"   src="www/res/icon/android/drawable-xhdpi-icon.png" />
        <icon density="xxhdpi"  src="www/res/icon/android/drawable-xxhdpi-icon.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/drawable-xxxhdpi-icon.png" />
		-->
		<!--
		<icon density="ldpi"    src="www/res/icon/android/logo-ldpi.png" />
        <icon density="mdpi"    src="www/res/icon/android/logo-mdpi.png" />
        <icon density="hdpi"    src="www/res/icon/android/logo-hdpi.png" />
        <icon density="xhdpi"   src="www/res/icon/android/logo-xhdpi.png" />
        <icon density="xxhdpi"  src="www/res/icon/android/logo-xxhdpi.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/logo-xxxhdpi.png" />
		-->
		<icon density="ldpi"    src="www/res/icon/android/team.png" />
        <icon density="mdpi"    src="www/res/icon/android/team.png" />
        <icon density="hdpi"    src="www/res/icon/android/team.png" />
        <icon density="xhdpi"   src="www/res/icon/android/team.png" />
        <icon density="xxhdpi"  src="www/res/icon/android/team.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/team.png" />
		
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
</widget>
